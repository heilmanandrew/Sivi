@page
@model Sivi2.Pages.Resumes.IndexModel

@{
    ViewData["Title"] = "My Resumes";
}

<h2>My Resumes</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].Skills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume[0].Other)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Resume) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Other)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
